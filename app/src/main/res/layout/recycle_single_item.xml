<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/photoListContact"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/default_avatar" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/photoListContact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contactSurname"
        app:layout_constraintBottom_toTopOf="@id/contactPhone"
        tools:text="sdasdasdasdasdasdasd" />

    <TextView
        android:id="@+id/contactSurname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/contactName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contactPhone"
        tools:text="sdsdasdasdasdassdadsaasdas" />

    <TextView
        android:id="@+id/contactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/contactSurname"
        app:layout_constraintStart_toStartOf="@id/contactName"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        tools:text="+79998882030" />


</androidx.constraintlayout.widget.ConstraintLayout>




