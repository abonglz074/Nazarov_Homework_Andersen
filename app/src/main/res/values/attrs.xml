<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClockView">
        <!--Circle color-->
        <attr name="clock_ring_color" format="color" />
        <!--Clock color-->
        <attr name="clock_hour_color" format="color" />
        <!--Minute color-->
        <attr name="clock_min_color" format="color" />
        <!--Second color-->
        <attr name="clock_second_color" format="color" />
        <!--Scale color-->
        <attr name="clock_scale_color" format="color" />
        <!--hour_hand_length-->
        <attr name="hour_hand_length" format="integer" />
        <!--min hand length-->
        <attr name="min_hand_length" format="integer" />
        <!--second hand length-->
        <attr name="second_hand_length" format="integer" />
    </declare-styleable>
</resources>